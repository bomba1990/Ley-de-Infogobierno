<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        
    </style>
    <style name="TitleTextStyle"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">12px</item>
    </style>
     <style name="TitlearticuloStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20px</item>
        <item name="android:textStyle">bold</item>
    </style>
     <style name="TitleCapituloStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">20px</item>
        <item name="android:textStyle">bold</item>
    </style>
    
     <style name="SubTitleCapituloStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">16px</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TitleTituloStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">24px</item>
        <item name="android:textStyle">bold</item>
    </style>
    
   <style name="ListView" parent="@android:style/Widget.ListView">
    <item name="android:background">#999999</item>
    <item name="android:cacheColorHint">@android:color/transparent</item>
    <item name="android:divider">@android:color/transparent</item>
    <item name="android:dividerHeight">0dp</item>
    <item name="android:padding">10dp</item>
</style>


</resources>
